# GearGuard .htaccess Configuration

# Enable error reporting (disable in production)
php_flag display_errors On
php_value error_reporting E_ALL

# Set default charset
AddDefaultCharset UTF-8

# Prevent directory browsing
Options -Indexes

# Custom error pages
ErrorDocument 404 /Oddo%20heckathon/views/errors/404.php
ErrorDocument 403 /Oddo%20heckathon/views/errors/403.php

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Protect config and database files
<FilesMatch "^(config\.php|database\.php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Set session cookie security
php_value session.cookie_httponly 1
php_value session.use_only_cookies 1
